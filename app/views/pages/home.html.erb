<div class="bg-[#0a0a2a] text-white font-poppins min-h-screen overflow-x-hidden relative">

  <!-- Glow Backgrounds -->
  <div class="absolute top-0 -left-40 w-[500px] h-[500px] bg-yellow-400/10 rounded-full blur-3xl animate-float-slow"></div>
  <div class="absolute bottom-0 -right-40 w-[500px] h-[500px] bg-purple-600/10 rounded-full blur-3xl animate-float-slow delay-1000"></div>

  <!-- Navbar -->
  <header class="relative z-20 w-full px-6 py-4 flex justify-between items-center bg-[#0a0a2a]/70 backdrop-blur-md border-b border-white/10">
    <div class="flex items-center space-x-3">
      <%= image_tag "4.png", alt: "Kalwar Bazaar", class: "w-10 h-10" %>
      <h1 class="text-yellow-300 font-bold text-xl font-playfair">Kalwar Bazaar</h1>
    </div>

    <nav class="flex items-center space-x-4">
      <% if user_signed_in? %>
        <span class="text-yellow-200 text-sm">Hi, <%= current_user.email %></span>

        <%= link_to "Sign Out", destroy_user_session_path,
          method: :delete,
          data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure you want to log out?"
          },
          class: "bg-gradient-to-r from-red-500 to-red-600 hover:from-red-600 hover:to-red-700 text-white px-4 py-2 rounded-md text-sm font-semibold shadow-md transition-all duration-300" %>

      <% else %>
        <%= link_to "Join Kalwar Bazaar", start_page_path,
          class: "bg-gradient-to-r from-yellow-400 to-orange-500 hover:from-yellow-500 hover:to-orange-600 text-black px-4 py-2 rounded-md text-sm font-semibold shadow-md transition-all duration-300" %>
      <% end %>
    </nav>

  </header>

  <!-- Container -->
  <div class="relative z-10 max-w-7xl mx-auto px-6 py-20 space-y-24">

    <!-- Section: Welcome Banner -->
    <section class="text-center space-y-6">
      <h2 class="text-4xl md:text-5xl font-bold text-yellow-300 font-playfair">Welcome to Kalwar Bazaar</h2>
      <p class="text-gray-300 text-lg md:text-xl max-w-2xl mx-auto">
        Discover handmade treasures, local artisans, and traditional crafts from the heart of Kalwar.
      </p>
    </section>

    <!-- Section: Categories -->
    <section>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-8 text-center">Shop by Categories</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        <% ["Clothing", "Jewelry", "Home Decor", "Accessories"].each do |category| %>
          <div class="bg-white/10 backdrop-blur-md p-6 rounded-xl text-center hover:scale-105 transition transform shadow-lg">
            <%= image_tag "feature1.png", class: "w-12 h-12 mx-auto mb-4", alt: category %>
            <p class="text-yellow-300 font-medium"><%= category %></p>
          </div>
        <% end %>
      </div>
    </section>

    <!-- Section: Featured Products -->
    <section>
      <h3 class="text-2xl font-semibold text-yellow-200 mb-8 text-center">Featured Products</h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <% 3.times do %>
          <div class="bg-white/5 rounded-xl overflow-hidden shadow-md hover:shadow-yellow-500/30 transition">
            <%= image_tag "feature2.jpg", class: "w-full h-48 object-cover" %>
            <div class="p-4 space-y-2">
              <h4 class="text-white font-semibold">Product Name</h4>
              <p class="text-yellow-400">â‚¹1,200</p>
              <%= link_to "View Details", "#", class: "text-sm text-yellow-300 hover:underline" %>
            </div>
          </div>
        <% end %>
      </div>
    </section>

    <!-- Section: About / How It Works -->
    <section class="text-center space-y-4 max-w-3xl mx-auto">
      <h3 class="text-2xl font-semibold text-yellow-200">How Kalwar Bazaar Works</h3>
      <p class="text-gray-400">
        Sign up as a buyer or seller. Explore thousands of unique items handcrafted by local vendors. Secure payments & easy delivery.
      </p>
    </section>

    <!-- Section: CTA -->
    <section class="text-center py-10">
      <%= link_to "Start Shopping", "#",
        class: "inline-block bg-gradient-to-r from-yellow-400 to-orange-500 text-black px-8 py-4 rounded-full font-bold shadow-lg hover:scale-105 transition" %>
    </section>
  </div>

  <!-- Footer -->
  <footer class="text-center py-10 text-gray-500 text-sm border-t border-white/10 mt-20">
    &copy; 2025 Kalwar Bazaar. All rights reserved.
  </footer>
</div>
