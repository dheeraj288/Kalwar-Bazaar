<div class="relative min-h-screen flex items-center justify-center bg-[#0a0a2a] text-white overflow-hidden font-poppins">

  <!-- Background Glow Circles -->
  <div class="absolute top-0 -left-40 w-[500px] h-[500px] bg-yellow-400/10 rounded-full blur-3xl animate-float-slow"></div>
  <div class="absolute bottom-0 -right-40 w-[500px] h-[500px] bg-purple-600/10 rounded-full blur-3xl animate-float-slow delay-1000"></div>

  <!-- Sparkles -->
  <div class="absolute inset-0 pointer-events-none">
    <% 30.times do %>
      <span class="absolute w-1 h-1 bg-yellow-300 rounded-full animate-sparkle"
            style="top:<%= rand(100) %>%; left:<%= rand(100) %>%"></span>
    <% end %>
  </div>

  <!-- Main Container -->
  <div class="relative z-10 w-full max-w-4xl px-6 flex flex-col items-center text-center space-y-8">

    <!-- Logo -->
    <div class="flex flex-col items-center space-y-4">
      <div class="relative w-40 h-40 md:w-48 md:h-48 rounded-full border-4 border-yellow-400 flex items-center justify-center shadow-[0_0_40px_rgba(255,215,0,0.5)] bg-white/5 backdrop-blur-md animate-pulse-slow">
        
        <!-- Cart Icon -->
        <%= image_tag "4.png", alt: "Kalwar Bazaar Logo", class: "w-20 h-20 md:w-24 md:h-24 drop-shadow-lg relative z-10" %>

        <!-- Subtle ethnic pattern overlay -->
        <div class="absolute inset-0 bg-[url('/assets/pattern.png')] bg-cover bg-center opacity-10 mix-blend-overlay rounded-full"></div>
      </div>

      <!-- Title -->
      <h1 class="text-5xl md:text-6xl font-extrabold tracking-wide font-playfair bg-gradient-to-r from-yellow-200 via-white to-yellow-400 bg-clip-text text-transparent relative shine-text">
        KALWAR
      </h1>
      <p class="text-yellow-400 text-2xl md:text-3xl font-semibold tracking-[0.25em]">BAZAAR</p>
    </div>

    <!-- Subtitle (Typed.js effect) -->
    <p id="typed-subtitle" class="text-gray-300 md:text-lg text-base h-6 italic"></p>

    <!-- CTA Buttons -->
    <div class="flex flex-col md:flex-row md:space-x-6 space-y-4 md:space-y-0 pt-6 w-full md:w-auto justify-center">
      <%= link_to new_user_registration_path,
        class: "relative overflow-hidden bg-gradient-to-r from-yellow-400 to-orange-500 text-black 
                px-10 py-3 rounded-2xl font-bold shadow-lg 
                transform transition hover:scale-110 hover:shadow-yellow-500/70
                backdrop-blur-md group" do %>
          <span class="relative z-10">Let's get started</span>
          <span class="absolute inset-0 bg-white/30 translate-x-[-100%] group-hover:translate-x-[100%] transition-transform duration-700"></span>
      <% end %>

      <%= link_to "I already have an account", new_user_session_path,
        class: "text-yellow-400 font-medium hover:underline text-center w-full md:w-auto" %>
    </div>

    <!-- Footer -->
    <p class="text-gray-400 text-xs pt-10">Powered by [App Developer Company Name]</p>
  </div>
</div>

